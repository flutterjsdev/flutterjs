{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FlutterJS",
  "scopeName": "source.fjs",
  "fileTypes": ["fjs"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#invalid-syntax" },
    { "include": "#dart-errors" },
    { "include": "#flutter-widgets" },
    { "include": "#keywords" },
    { "include": "#dart-methods" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#types" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.fjs",
          "match": "//.*$"
        },
        {
          "name": "comment.block.fjs",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fjs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.fjs", "match": "\\\\." }
          ]
        },
        {
          "name": "string.quoted.single.fjs",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "name": "constant.character.escape.fjs", "match": "\\\\." }
          ]
        },
        {
          "name": "string.template.fjs",
          "begin": "`",
          "end": "`",
          "patterns": [
            { "name": "constant.character.escape.fjs", "match": "\\\\." },
            {
              "name": "meta.template.expression.fjs",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [{ "include": "$self" }]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.fjs",
          "match": "\\b(\\d+\\.\\d*|\\d+)\\b"
        }
      ]
    },
    "invalid-syntax": {
      "patterns": [
        {
          "name": "invalid.deprecated.fjs",
          "match": "\\bconst\\s+new\\b",
          "comment": "Dart const new pattern - convert to new for JS"
        },
        {
          "name": "invalid.illegal.fjs",
          "match": "}\\s*\\(\\s*\\)",
          "comment": "Invalid IIFE syntax"
        },
        {
          "name": "invalid.illegal.fjs",
          "match": "\\bfinal\\s+",
          "comment": "Dart keyword 'final'"
        },
        {
          "name": "invalid.illegal.fjs",
          "match": "\\blate\\s+",
          "comment": "Dart keyword 'late'"
        }
      ]
    },
    "dart-errors": {
      "patterns": [
        {
          "name": "invalid.illegal.fjs",
          "match": "this\\.setState\\s*\\(",
          "comment": "Flutter setState not available in JS"
        },
        {
          "name": "invalid.illegal.fjs",
          "match": "@override",
          "comment": "Dart @override annotation"
        },
        {
          "name": "invalid.illegal.fjs",
          "match": "\\brequired\\s+",
          "comment": "Dart 'required' keyword"
        }
      ]
    },
    "flutter-widgets": {
      "patterns": [
        {
          "name": "support.class.flutter.widget.fjs",
          "match": "\\b(Scaffold|AppBar|Container|Column|Row|Center|Padding|Expanded|Stack|ListView|GridView|Card|Text|TextField|ElevatedButton|TextButton|IconButton|FloatingActionButton|Icon|Image|Divider|CircleAvatar|SizedBox|ListTile|MaterialApp|Navigator|GestureDetector|SingleChildScrollView)\\s*\\(",
          "comment": "Flutter widgets - called with or without 'new'"
        },
        {
          "name": "support.class.flutter.provider.fjs",
          "match": "\\b(ChangeNotifier|Provider|ChangeNotifierProvider|Consumer|Watch|Select)\\s*\\(",
          "comment": "Provider state management"
        },
        {
          "name": "support.class.flutter.theme.fjs",
          "match": "\\b(ThemeData|TextStyle|BoxDecoration|BorderRadius|Colors|EdgeInsets|MainAxisAlignment|CrossAxisAlignment|FontWeight)(?=\\s*\\(|\\.)\\b",
          "comment": "Theme and styling classes"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fjs",
          "match": "\\b(if|else|for|while|do|switch|case|default|break|continue|return|throw|try|catch|finally|async|await)\\b"
        },
        {
          "name": "keyword.declaration.fjs",
          "match": "\\b(const|let|var)\\b"
        },
        {
          "name": "keyword.declaration.fjs",
          "match": "\\b(function|class|extends)\\b"
        },
        {
          "name": "keyword.import.fjs",
          "match": "\\b(import|export|from|as|default)\\b"
        },
        {
          "name": "keyword.operator.fjs",
          "match": "(===|!==|==|!=|<=|>=|&&|\\|\\||!|\\?\\?|\\?|\\.\\.|\\.\\.\\.|=>)"
        },
        {
          "name": "keyword.operator.new.fjs",
          "match": "\\bnew\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.call.fjs",
          "match": "\\b([a-zA-Z_]\\w*)(?=\\s*\\()",
          "captures": {
            "1": { "name": "entity.name.function.fjs" }
          }
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "meta.class.declaration.fjs",
          "match": "\\bclass\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.class.fjs" }
          }
        },
        {
          "name": "support.class.builtin.fjs",
          "match": "\\b(Object|Array|String|Number|Boolean|Date|Map|Set|WeakMap|WeakSet|Promise)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.fjs",
          "match": "\\b(String|int|double|bool|List|Map|Set|dynamic|void|Never|any|boolean|number|object)\\b"
        },
        {
          "name": "meta.type.parameters.fjs",
          "match": "<([A-Za-z_]\\w*)>",
          "captures": {
            "1": { "name": "support.type.fjs" }
          }
        }
      ]
    },
    "dart-methods": {
      "patterns": [
        {
          "name": "support.function.dart.fjs",
          "match": "\\b(increment|fetchQuote|reset|notifyListeners|watch|read|select|jsonDecode|jsonEncode|build|createState|_incrementCounter)\\b"
        },
        {
          "name": "support.function.flutter.fjs",
          "match": "\\b(runApp|main|setState|dispose|initState|didChangeDependencies)\\s*\\(",
          "comment": "Flutter main functions"
        },
        {
          "name": "support.function.global.fjs",
          "match": "\\b(print|async|await|Future|Stream)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.fjs",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.comparison.fjs",
          "match": "(===|!==|==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.fjs",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.fjs",
          "match": "(=|\\+=|-=|\\*=|/=|%=)"
        }
      ]
    }
  }
}