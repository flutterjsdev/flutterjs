{
  "version": "0.2.0",
  "configurations": [
     {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}"
    },
    // =====================================================================
    // ğŸ”¥ HOT-RELOAD & SMART CACHING (NEW)
    // =====================================================================
    {
      "name": "ğŸ”¥ Flutter.js Hot-Reload (Auto-Rebuild on Change)",
      "type": "dart",
      "request": "launch",
      "program": "bin/flutterjs.dart",
      "args": [
        "run",
        "--project=examples/counter",
        "--to-js",
        "--hot-reload",
        "-vv"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "ğŸ”¥ Flutter.js Hot-Reload (Analysis Only)",
      "type": "dart",
      "request": "launch",
      "program": "bin/flutterjs.dart",
      "args": ["run", "--project=examples/counter", "--hot-reload", "-vv"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "ğŸ”¥ Flutter.js Hot-Reload (Fast Mode)",
      "type": "dart",
      "request": "launch",
      "program": "bin/flutterjs.dart",
      "args": [
        "run",
        "--project=examples/counter",
        "--to-js",
        "--hot-reload",
        "--debounce-time=300",
        "-v"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    // =====================================================================
    // ğŸ’¾ CACHE MANAGEMENT
    // =====================================================================
    {
      "name": "ğŸ’¾ Flutter.js Incremental Build (Default Cache)",
      "type": "dart",
      "request": "launch",
      "program": "bin/flutterjs.dart",
      "args": [
        "run",
        "--project=examples/counter",
        "--to-js",
        "--incremental",
        "-v"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "ğŸ—‘ï¸ Flutter.js Full Rebuild (Clear Cache)",
      "type": "dart",
      "request": "launch",
      "program": "bin/flutterjs.dart",
      "args": [
        "run",
        "--project=examples/counter",
        "--to-js",
        "--clear-cache",
        "-v"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "ğŸ—‘ï¸ Flutter.js Force Full Rebuild (--all)",
      "type": "dart",
      "request": "launch",
      "program": "bin/flutterjs.dart",
      "args": ["run", "--project=examples/counter", "--to-js", "--all", "-v"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    // =====================================================================
    // ORIGINAL CONFIGS (STILL AVAILABLE)
    // =====================================================================
    {
      "name": "ğŸ› ï¸ Flutter.js Run (Full Pipeline + Debug)",
      "type": "dart",
      "request": "launch",
      "program": "bin/flutterjs.dart",
      "args": ["run", "--project=examples/counter", "--to-js", "-vv"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "ğŸ› ï¸ Flutter.js Run (With DevTools IR Viewer)",
      "type": "dart",
      "request": "launch",
      "program": "bin/flutterjs.dart",
      "args": [
        "run",
        "--project=examples/counter",
        "--to-js",
        "-vv",
        "--devtools-port=8765"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false
    }
  ],
  "compounds": [
    {
      "name": "ğŸš€ Development (Hot-Reload + Full Debug)",
      "configurations": ["ğŸ”¥ Flutter.js Hot-Reload (Auto-Rebuild on Change)"],
      "stopOnEntry": false
    },
    {
      "name": "ğŸš€ Fast Development (Hot-Reload + Quick Build)",
      "configurations": ["ğŸ”¥ Flutter.js Hot-Reload (Fast Mode)"],
      "stopOnEntry": false
    },
    {
      "name": "ğŸš€ Fresh Build (Clear Cache + Full Debug)",
      "configurations": ["ğŸ—‘ï¸ Flutter.js Full Rebuild (Clear Cache)"],
